<robot xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
       xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
       xmlns:xacro="http://ros.org/wiki/xacro">

  <!--Constant parameters-->
  <xacro:property name="arm_reduction_high" value="100.0" />
  <xacro:property name="arm_reduction_low"  value= "80.0" />
  <xacro:property name="wrist_reduction"    value="336.0" />

  <xacro:property name="arm_friction"    value="5.0" />
  <xacro:property name="wrist_friction"  value="5.0" />

  <xacro:property name="arm_damping"     value="0.1" />
  <xacro:property name="wrist_damping"   value="0.1" />

 <xacro:property name="arm_max_vel"      value="1.0" />
 <xacro:property name="wrist_max_vel"    value="1.0" />

  <!-- TODO: Implement shoulder and wrist transmission models -->
  <!-- TODO: Update dynamic models -->

  <!--File includes-->
  <include filename="$(find reem_description)/urdf/deg_to_rad.xacro" />
  <include filename="$(find reem_description)/urdf/arm/arm.gazebo.xacro" />
  <include filename="$(find reem_description)/urdf/arm/arm.transmission.xacro" />

  <xacro:macro name="reem_arm" params="name parent side reflect">

    <!--************************-->
    <!--        SHOULDER        -->
    <!--************************-->
    <link name="arm_${side}_1_link">
      <inertial>
        <origin xyz="0.0006 -0.0005 ${reflect*0.20739}" rpy="0 0 0"/>
        <mass value="2.148" />
        <!-- NOTE: Assuming cylinder centered at CoM with r=0.05, h=0.05 with axis parallel to x coordinate -->
        <inertia ixx="0.0026850"  ixy="0"  ixz="0" iyy="0.0017900" iyz="0" izz="0.0017900" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://reem_description/meshes/arm/arm_1.dae" scale="1 1 ${-1*reflect}"/>
        </geometry>
        <material name="DarkGrey" />
      </visual>
      <collision>
       <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://reem_description/meshes/arm/arm_1_collision.stl" scale="1 1 ${-1*reflect}"/>
        </geometry>
      </collision>
    </link>

    <joint name="arm_${side}_1_joint" type="revolute">
      <parent link="${parent}" />
      <child link="arm_${side}_1_link" />
      <origin xyz="-0.015 -0.273 0" rpy="${(-165.0 * reflect) * deg_to_rad} 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="${-45.0 * deg_to_rad}" upper="${180.0 * deg_to_rad}" effort="0.0" velocity="${arm_max_vel}" />
      <dynamics friction="${arm_friction}" damping="${arm_damping}"/>
    </joint>

   <link name="arm_${side}_2_link">
      <inertial>
        <origin xyz="0.0183 -0.09275 ${reflect*0.00478}" rpy="0 0 0"/>
        <mass value="1.610" />
        <!-- NOTE: Assuming cylinder centered at CoM with r=0.05, h=0.05 with axis parallel to y coordinate -->
        <inertia ixx="0.0013417"  ixy="0"  ixz="0" iyy="0.0020125" iyz="0" izz="0.0013417" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://reem_description/meshes/arm/arm_2.dae" scale="1 1 ${-1*reflect}"/>
        </geometry>
        <material name="DarkGrey" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://reem_description/meshes/arm/arm_2_collision.stl" scale="1 1 ${-1*reflect}"/>
        </geometry>
      </collision>
    </link>

    <joint name="arm_${side}_2_joint" type="revolute">
      <parent link="arm_${side}_1_link" />
      <child link="arm_${side}_2_link" />
      <origin xyz="0 0 ${0.2385 * reflect}" rpy="${-90.0 * reflect * deg_to_rad} ${-75.0 * reflect * deg_to_rad} ${90.0 * deg_to_rad}" />
      <axis xyz="0 0 1" />
      <limit lower="${-15.0 * deg_to_rad}" upper="${120.0 * deg_to_rad}" effort="0.0" velocity="${arm_max_vel}" />
      <dynamics friction="${arm_friction}" damping="${arm_damping}"/>
    </joint>

    <link name="arm_${side}_3_link">
      <inertial>
        <origin xyz="0.00045 -0.01547 ${reflect * 0.07654}" rpy="0 0 0"/>
        <mass value="1.656" />
        <!-- NOTE: Assuming cylinder centered at CoM with r=0.05, h=0.05 with axis parallel to x coordinate -->
        <inertia ixx="0.0020700"  ixy="0"  ixz="0" iyy="0.0013800" iyz="0" izz="0.0013800" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://reem_description/meshes/arm/arm_3.dae" scale="1 1 ${-1*reflect}"/>
        </geometry>
        <material name="DarkGrey" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://reem_description/meshes/arm/arm_3_collision.stl" scale="1 1 ${-1*reflect}"/>
        </geometry>
      </collision>
    </link>

    <joint name="arm_${side}_3_joint" type="revolute">
      <parent link="arm_${side}_2_link" />
      <child link="arm_${side}_3_link" />
      <origin xyz="0.02 -0.142 0" rpy="${90.0 * reflect * deg_to_rad} 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="${-135.0 * deg_to_rad}" upper="${157.5 * deg_to_rad}" effort="0.0" velocity="${arm_max_vel}" />
      <dynamics friction="${arm_friction}" damping="${arm_damping}"/>
    </joint>

    <!--************************-->
    <!--        ELBOW           -->
    <!--************************-->
    <link name="arm_${side}_4_link">
      <inertial>
        <origin xyz="-0.06424 0.01712 ${-reflect * 0.00666}" rpy="0 0 0"/>
        <mass value="1.013" />
        <!-- NOTE: Assuming cylinder centered at CoM with r=0.05, h=0.05 with axis parallel to x coordinate -->
        <inertia ixx="0.0012663"  ixy="0"  ixz="0" iyy="0.00084417" iyz="0" izz="0.00084417" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://reem_description/meshes/arm/arm_4.dae" scale="1 1 ${-1*reflect}"/>
        </geometry>
        <material name="DarkGrey" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://reem_description/meshes/arm/arm_4_collision.stl" scale="1 1 ${-1*reflect}"/>
        </geometry>
      </collision>
    </link>

    <joint name="arm_${side}_4_joint" type="revolute">
      <parent link="arm_${side}_3_link" />
      <child link="arm_${side}_4_link" />
      <origin xyz="0 -0.02 ${0.088 * reflect}" rpy="0 ${90.0 * reflect * deg_to_rad} 0" />
      <axis xyz="0 0 1" />
      <limit lower="0" upper="${130.0 * deg_to_rad}" effort="0.0" velocity="${arm_max_vel}" />
      <dynamics friction="${arm_friction}" damping="${arm_damping}"/>
    </joint>

    <!--************************-->
    <!--        WRIST           -->
    <!--************************-->
    <link name="arm_${side}_5_link">
      <inertial>
        <origin xyz="-0.00045 -0.00009 ${reflect * 0.08726}" rpy="0 0 0"/>
        <mass value="1.858" />
        <!-- NOTE: Assuming cylinder centered at CoM with r=0.05, h=0.1 with axis parallel to z coordinate -->
        <inertia ixx="0.0027096"  ixy="0"  ixz="0" iyy="0.0027096" iyz="0" izz="0.0023225" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://reem_description/meshes/arm/arm_5.dae" scale="1 1 ${-1*reflect}"/>
        </geometry>
        <material name="LightGrey" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://reem_description/meshes/arm/arm_5_collision.stl" scale="1 1 ${-1*reflect}"/>
        </geometry>
      </collision>
    </link>

    <joint name="arm_${side}_5_joint" type="revolute">
      <parent link="arm_${side}_4_link" />
      <child link="arm_${side}_5_link" />
      <origin xyz="-0.088 0.02 0" rpy="0 ${-90.0 * reflect * deg_to_rad} 0" />
      <axis xyz="0 0 1" />
      <limit lower="${-120.0 * deg_to_rad}" upper="${120.0 * deg_to_rad}" effort="0.0" velocity="${wrist_max_vel}" />
      <dynamics friction="${wrist_friction}" damping="${wrist_damping}"/>
    </joint>

    <link name="arm_${side}_6_link">
      <inertial>
        <origin xyz="-0.0002 -0.01155 ${reflect * 0.00002}" rpy="0 0 0"/>
        <mass value="0.255" />
        <!-- NOTE: Assuming cylinder centered at CoM with r=0.02, h=0.08 with axis parallel to z coordinate -->
        <inertia ixx="0.0001615"  ixy="0"  ixz="0" iyy="0.0001615" iyz="0" izz="0.000051" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://reem_description/meshes/arm/arm_6.dae" scale="1 1 ${-1*reflect}"/>
        </geometry>
        <material name="LightGrey" />
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.04" length="0.0385"/>
        </geometry>
      </collision>
    </link>

    <joint name="arm_${side}_6_joint" type="revolute">
      <parent link="arm_${side}_5_link" />
      <child link="arm_${side}_6_link" />
      <origin xyz="0 0 ${0.15 * reflect}" rpy="${-90.0 * reflect * deg_to_rad} 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="${-90.0 * deg_to_rad}" upper="${90.0 * deg_to_rad}" effort="0.0" velocity="${wrist_max_vel}" />
      <dynamics friction="${wrist_friction}" damping="${wrist_damping}"/>
    </joint>

    <link name="arm_${side}_7_link">
      <inertial>
        <!--TODO: Verify these inertial parameters-->
        <origin xyz="0.001880317  -0.005168045 ${reflect * 0.109404509}" rpy="0 0 0"/>
        <mass value="0.152461831" />
        <!-- NOTE: Assuming point mass -->
        <inertia ixx="0"  ixy="0"  ixz="0" iyy="0" iyz="0" izz="0" />
      </inertial>
      <visual>
        <origin xyz="0 0 ${0.046 * reflect}" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.02" length="0.005"/>
        </geometry>
        <material name="DarkGrey" />
      </visual>
      <collision>
        <origin xyz="0 0 ${0.046 * 0.75 * reflect}" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.02" length="0.023"/>
        </geometry>
      </collision>
    </link>

    <joint name="arm_${side}_7_joint" type="revolute">
      <parent link="arm_${side}_6_link" />
      <child link="arm_${side}_7_link" />
      <origin xyz="0 0 0" rpy="${90.0 * reflect * deg_to_rad} 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="${-120.0 * deg_to_rad}" upper="${120.0 * deg_to_rad}" effort="0.0" velocity="${wrist_max_vel}" />
      <dynamics friction="${wrist_friction}" damping="${wrist_damping}"/>
    </joint>

    <link name="arm_${side}_tool_link">
      <inertial>
        <mass value="0.1" />
        <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" />
      </inertial>
      <visual>
        <origin xyz="0.001 0 0" rpy="0 ${90.0 * deg_to_rad} 0" />
        <geometry>
          <cylinder radius="0.005" length="0.005"/>
        </geometry>
        <material name="LightGrey" />
      </visual>
      <collision>
        <origin xyz="0.001 0 0" rpy="0 ${90.0 * deg_to_rad} 0" />
        <geometry>
          <cylinder radius="0.005" length="0.005"/>
        </geometry>
      </collision>
    </link>

    <joint name="arm_${side}_tool_joint" type="fixed">
      <parent link="arm_${side}_7_link" />
      <child link="arm_${side}_tool_link" />
      <origin xyz="0 0 ${reflect * 0.046}" rpy="${90.0 * deg_to_rad} ${-90.0 * reflect * deg_to_rad} 0" />
    </joint>

    <!-- extensions -->
    <xacro:reem_arm_gazebo side="${side}" number="1" />
    <xacro:reem_arm_gazebo side="${side}" number="2" />
    <xacro:reem_arm_gazebo side="${side}" number="3" />
    <xacro:reem_arm_gazebo side="${side}" number="4" />
    <xacro:reem_arm_gazebo side="${side}" number="5" />
    <xacro:reem_arm_gazebo side="${side}" number="6" />
    <xacro:reem_arm_gazebo side="${side}" number="7" />

    <xacro:reem_arm_simple_transmission name="${name}" side="${side}" number="1" reduction="${arm_reduction_high}" />
    <xacro:reem_arm_simple_transmission name="${name}" side="${side}" number="2" reduction="${arm_reduction_high}" />
    <xacro:reem_arm_simple_transmission name="${name}" side="${side}" number="3" reduction="${arm_reduction_low}" />
    <xacro:reem_arm_simple_transmission name="${name}" side="${side}" number="4" reduction="${arm_reduction_low}" />
    <xacro:reem_arm_simple_transmission name="${name}" side="${side}" number="5" reduction="${wrist_reduction}" />
    <xacro:reem_arm_simple_transmission name="${name}" side="${side}" number="6" reduction="${wrist_reduction}" />
    <xacro:reem_arm_simple_transmission name="${name}" side="${side}" number="7" reduction="${wrist_reduction}" />

  </xacro:macro>

</robot>
